<section style="background-color: #eee;">
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6 col-xl-4">
        <div class="card text-black">
            <i class="fab fa-apple fa-lg pt-3 pb-1 px-3"></i>
            <div>
              <%= image_tag @product.image, size: "300x210", alt: "Image not found",class: "card-img-top" if @product.image.attached? %>
            </div>
            <div class="card-body">
              <div class="text-center">
                <h5 class="card-title"><%= @product.name %></h5>
              </div>
            
              <div class="text-start">
                <%= @product.description %>
              </div>

              <h5 class="text-center">
                <%= number_to_currency(@product.price, unit: 'â‚¹', precision: 0, format: "%u%n") %>
              </h5>
            </div>
          <% if current_user && current_user.customer? %>
            <div class="d-flex justify-content-between mt-3">
              <%= link_to "Add to Cart", "/cart/#{@product.id}", data: { turbo_method: :post }, class: "btn btn-primary" %>
              <%= link_to "Buy Now", "#", class: "btn btn-success" %>
            </div>
          <% end %> 
          <% if current_user && current_user.admin? %>
            <div class="d-flex justify-content-between mt-3">
              <%= link_to "Edit", edit_product_path(@product), class: "btn btn-warning" %>
              <%= link_to "Delete", product_path(@product), data: { turbo_method: :delete,
                                                                    turbo_confirm: "Are you sure?" }, 
                                                                    class: "btn btn-danger" 
              %>
            </div>
          <% end %> 
        </div>
      </div>
    </div>
  </div>
</section>